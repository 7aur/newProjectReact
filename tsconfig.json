{
    "compilerOptions": {
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "module": "es6",
        "noImplicitAny": true,
        "outDir": "./build/",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "typeRoots": [
            "./node_modules/@types",
            "../@types",
            "./typings"
        ],
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "baseUrl": "src",
        "paths": {
            "src/*": [
                "*"
            ]
        }
    },
    "esModuleInterop": true ,
    "include": [
        "./src/**/*.d.ts", "declarations.d.ts"
    ]
}